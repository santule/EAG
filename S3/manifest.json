{
  "manifest_version": 3,
  "name": "Stoic Mentor",
  "version": "1.0",
  "description": "Daily wisdom from Marcus Aurelius's Meditations with modern interpretations and practical exercises",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.gutenberg.org/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
